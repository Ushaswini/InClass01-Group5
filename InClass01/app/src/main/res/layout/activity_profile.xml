<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="example.com.inclass01.ProfileActivity">

    <RelativeLayout
        android:id="@+id/rellayoutProfile"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="User Profile"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="82dp"
            android:text="@string/name_lbl"
            android:textSize="18dp"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/age_lbl"
            android:layout_below="@+id/textViewName"
            android:layout_alignLeft="@+id/textViewName"
            android:layout_alignStart="@+id/textViewName"
            android:layout_marginTop="10dp"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewAge"
            android:layout_alignStart="@+id/textViewAge"
            android:layout_below="@+id/textViewAge"
            android:layout_marginTop="15dp"
            android:text="@string/weight_lbl"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewWeight"
            android:layout_alignStart="@+id/textViewWeight"
            android:layout_below="@+id/textViewWeight"
            android:layout_marginTop="15dp"
            android:text="@string/addr_lbl"
            android:textSize="18dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewNameValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewName"
            android:layout_marginLeft="71dp"
            android:layout_marginStart="71dp"
            android:layout_toEndOf="@+id/textViewAddress"
            android:layout_toRightOf="@+id/textViewAddress"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textViewAgeValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textViewAge"
            android:layout_alignLeft="@+id/textViewNameValue"
            android:layout_alignStart="@+id/textViewNameValue"
            android:layout_toEndOf="@+id/textViewNameValue"
            android:layout_toRightOf="@+id/textViewNameValue"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textViewWtValue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewAgeValue"
            android:layout_alignStart="@+id/textViewAgeValue"
            android:layout_alignTop="@+id/textViewWeight"
            android:textSize="18dp"/>

        <TextView
            android:id="@+id/textViewAddrvalue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textViewWtValue"
            android:layout_alignStart="@+id/textViewWtValue"
            android:layout_alignTop="@+id/textViewAddress"
            android:textSize="18dp"/>
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
